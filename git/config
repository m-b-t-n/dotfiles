[Include]
	path = ~/.config/git/alias
	path = ~/dotfiles/env/git/user
	path = ~/dotfiles/env/git/proxy

[core]
	editor = nvim
	quotepath = false

[fetch]
	prune = true

[pull]
	rebase = false
	prune = true

[color]
	ui = auto

[diff]
	tool = vimdiff

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

